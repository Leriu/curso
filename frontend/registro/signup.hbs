<section>
  <div class="container">
    <div class="row">
      <div class="col-md-6 centmar">
        <h2>Regístrate</h2>
        <form action="/registro/signup" method="POST" id='uploadForm'  ref='uploadForm' encType="application/json">
          <div class="form-group">
            <label for="username">Nombre Completo</label>
            <input type="text" name="username" class="form-control" id="username"  placeholder="Escriba su nombre">
          </div>
          <div class="form-group">
            <label for="email">Correo electrónico</label>
            <input type="email" name="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Escriba su e-mail">
            <small id="emailHelp" class="form-text text-muted">Tu email no será compartido con NADIE!!</small>
          </div>
          <div class="form-group">
            <label for="password">Contraseña</label>
            <input type="password" name="password" class="form-control" id="password" placeholder="Cree una contraseña">
          </div>

          {{#if message }}
            <div class="error-message alert alert-danger">{{ message }}</div>
          {{/if}}
          <button type="submit" class="btn btn-info btn-block">Crear cuenta</button>
          <br>
          <p class="account-message">
           ¿Ya tienes cuenta?
            <a href="/registro/login" class="badge badge-dark">Inicia sesión</a>
          </p>
         
        </form>
      </div>
    </div>
  </div>
</section>
