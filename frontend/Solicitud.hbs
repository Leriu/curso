<div class="container">
    <div class="row">
        <div class='col-sm-6'>
            <div class="well">
                <div id="datetimepicker1" class="input-append date">
                    <input data-format="dd/MM/yyyy hh:mm:ss" type="text"></input>
                    <span class="add-on">
                    <i class="far fa-calendar-alt"></i>
                    <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
                    </span>
                </div>
            </div>
    </div>
</div>

